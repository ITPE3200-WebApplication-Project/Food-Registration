@model Food_Registration.Models.Product

<div class="container my-4">
  <div class="card shadow">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="@Url.Content(Model.ImageUrl)" class="img-fluid rounded-start h-100" alt="@Model.Name" style="object-fit: cover;">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title mb-4">@Model.Name</h2>

          <!-- Producer Information Section -->
          @if (Model.Producer != null)
          {
            <div class="producer-info mb-4 p-3 border rounded">
              <div class="row align-items-center">
                @if (!string.IsNullOrEmpty(Model.Producer.ImageUrl))
                {
                  <div class="col-auto">
                    <img src="@Model.Producer.ImageUrl" alt="@Model.Producer.Name" class="producer-logo rounded"
                      style="width: 80px; height: 80px; object-fit: cover;">
                  </div>
                }
                <div class="col">
                  <h5 class="mb-2">Producer: @Model.Producer.Name</h5>
                  @if (!string.IsNullOrEmpty(Model.Producer.Description))
                  {
                    <p class="mb-0 text-muted">@Model.Producer.Description</p>
                  }
                </div>
              </div>
            </div>
          }

          <div class="mb-4">
            <h5>Description</h5>
            <p class="card-text">@Model.Description</p>
          </div>

          <div class="mb-4">
            <h5>Category</h5>
            <p class="card-text">@Model.Category</p>
          </div>

          <div class="nutrition-info mb-4">
            <h5>Nutritional Information (per 100g)</h5>
            <div class="row">
              <div class="col-md-3">
                <div class="nutrition-item" style="min-width: 120px;">
                  <strong>Calories</strong>
                  <p>@Model.Calories kcal</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="nutrition-item" style="min-width: 120px;">
                  <strong>Protein</strong>
                  <p>@Model.Protein g</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="nutrition-item text-nowrap" style="width: 145px;">
                  <strong>Carbohydrates:</strong>
                  <p>@Model.Carbohydrates g</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="nutrition-item" style="margin-left: 25px;">
                  <strong>Fat:</strong>
                  <p>@Model.Fat g</p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary rounded-pill">
              <i class="bi bi-arrow-left"></i> Back to Products
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
