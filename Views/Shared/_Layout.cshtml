<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webapplikasjon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" />
</head>
<body>

    

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!--Logo-->
            <a class="navbar-brand" href="/">
                <img src="~/images/logo.png" alt="Logo" class="logo" style="height: 100px;"/>
            </a>
            <!--<a class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">webapplikasjon</a>-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewProduct">New Products</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Login</a>
                    <a asp-area="" asp-controller="Account" asp-action="SignUp" class="btn btn-primary">Create Account</a>
                </div>
            </div>
        </div>
    </nav>
</header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
                
        </main>
    </div>

    <footer class="footer">
        <!--Footer Cooming Soon-->
        <p>&copy; 2024 Food-Registration Company. All rights reserved.</p>
    </footer>

    
</body>
</html>
