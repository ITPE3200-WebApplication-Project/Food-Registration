@{
    ViewData["Title"] = "NewProduct";
}


@model Food_Registration.Models.Product

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Create New Product</h1>

            <form asp-action="NewProduct" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Name</label><span class="text-danger">*</span>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Producer</label><span class="text-danger">*</span>
                    <select asp-for="ProducerId" asp-items="ViewBag.Producers" class="form-select">
                        <option value="">-- Select a Producer --</option>
                    </select>
                    <span asp-validation-for="ProducerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <select asp-for="Category" asp-items="ViewBag.Categories" class="form-select">
                        <option value="">-- Select a Category --</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Nutritional Information -->
                <div class="mb-3">
                    <h5>Nutritional Values (per 100g)</h5>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Calories" class="form-label">Calories (kcal)</label>
                            <input asp-for="Calories" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Calories" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Protein" class="form-label">Protein (g)</label>
                            <input asp-for="Protein" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Protein" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Carbohydrates" class="form-label">Carbohydrates (g)</label>
                            <input asp-for="Carbohydrates" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Fat" class="form-label">Fat (g)</label>
                            <input asp-for="Fat" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Fat" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">Create Product</button>
                    <a asp-action="AllProducts" asp-controller="Product" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}