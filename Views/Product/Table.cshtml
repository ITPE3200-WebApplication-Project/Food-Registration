@using Food_Registration.ViewModels
@model ProductsViewModel
  
    <div class="container my-4"><!--Title-->
        <h1 class="text-center mb-4"> @ViewBag.CurrentViewName </h1>
        <div class="card shadow-sm">
          <div class="card-body"></div>
            <table class="table table-hover table-bordered">
              <thead class="table-primary">
                <tr>
                  <th>Product ID</th>
                  <th> Name </th>
                  <td> Update </td>
                  <td> Delete </td>
                </tr>
              </thead>
              <tbody>
                @foreach (var product in Model.Products)
                {
                  <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td class="text-center">
                        <a asp-action="Update" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning rounded-pill px-3">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-danger rounded-pill px-3">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div> 
      </div>  
