@using Food_Registration.ViewModels
@model ProductsViewModel

<div class="container my-4">
  <h1 class="text-center mb-4"> @ViewBag.CurrentViewName </h1>
  <div class="card shadow-sm" style="width: 100%; max-width: none; height: 100%; max-height: none;">
    <div class="card-body px-4 py-2">
      <div class="d-flex justify-content-between align-items-center" style="width: 100%; min-height: 60px;">
        <h1 class="card-title">My Products</h1>
        <a asp-action="NewProduct" class="btn btn-success rounded-pill px-3">
          <i class="bi bi-plus-circle"></i> Add New Product
        </a>
      </div>
      <table class="table table-hover table-bordered mt-2">
        <thead class="table-primary">
          <tr>
            <th>Product ID</th>
            <th> Name </th>
            <td> Update </td>
            <td> Delete </td>
          </tr>
        </thead>
        <tbody>
          @foreach (var product in Model.Products)
          {
            <tr>
              <td>@product.ProductId</td>
              <td>@product.Name</td>
              <td class="text-center">
                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning rounded-pill px-3">
                  <i class="bi bi-pencil-square"></i> Update
                </a>
              </td>
              <td class="text-center">
                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-danger rounded-pill px-3">
                  <i class="bi bi-trash"></i>Delete
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>
