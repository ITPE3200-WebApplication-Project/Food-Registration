@model Food_Registration.Models.Producer

<div class="container my-4">
  <h1 class="text-center mb-4">Delete Producer</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="p-4 border rounded bg-light">
        <h3>Are you sure you want to delete this producer?</h3>

        <dl class="row mt-4">
          <dt class="col-sm-3">Name</dt>
          <dd class="col-sm-9">@Model.Name</dd>

          <dt class="col-sm-3">Description</dt>
          <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <div class="mt-4">
          <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProducerId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Table" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>