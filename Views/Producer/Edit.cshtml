@model Food_Registration.Models.Producer

<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">Edit Producer</h1>

      <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProducerId" />
        <input type="hidden" asp-for="OwnerId" />

        <div class="row mb-4">
          <div class="col-md-8">
            <div class="form-group mb-3">
              <label asp-for="Name" class="form-label">Name</label><span class="text-danger">*</span>
              <input asp-for="Name" class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
              <label asp-for="Description" class="form-label">Description</label>
              <textarea asp-for="Description" class="form-control" rows="3"></textarea>
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
              <label asp-for="ImageUrl" class="form-label">Logo URL</label>
              <input asp-for="ImageUrl" class="form-control" />
              <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
              <button type="submit" class="btn btn-success">Save Changes</button>
              <a asp-action="Table" class="btn btn-secondary">Cancel</a>
            </div>
          </div>

          <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                  <label class="form-label">Current Logo</label>
                  <img src="@Model.ImageUrl" alt="Current Logo" class="img-fluid rounded" />
                </div>
            }
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}