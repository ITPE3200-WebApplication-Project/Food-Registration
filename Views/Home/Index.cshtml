@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-4">
    <h1 class="display-4">List over food registration </h1>
</div>

<!--Search function-->
<form method="get" action="/" class="d-flex justify-content-center mt-4 mb-5">
    <div class="input-group" style="width: 700px; max-width: 100%;">
        <input type="text" name="searching" class="form-control" placeholder="Search products using product name or ID"
            value="@ViewData["Getproductlist"]" style="border: none; border-radius: 15px 0 0 15px;">
        <button value="search" class="btn btn-primary" type="submit"
            style="border: none; border-radius: 0 15px 15px 0;">Search</button>
    </div>
</form>

