@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">List over food registration </h1>
</div>


<section class = "searching-box">
    <div class="searching">
        <!-- Search box-->
        <form action = "/Search" method="get" class="search-form">
            <input type="text" name="q" placeholder="Search..." class="search-input" />
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>
</section>

<section class="category-slider">
    <!-- Carusell for categories, it is cooming here-->
    <div class="slider">
        <div class="slide">Fruit</div>
        <div class="slide">Vegetable</div>
        <div class="slide">Fast Food</div>
        <!--More categories will be added here when decided-->
    </div>
</section>


<div class="container-fluid">
    <!-- Card 1: Apple -->
    <div class="card" style="width: 18rem; display: inline-block; margin: 10px;">
        <img class="card-img-top" src="@Url.Content("~/images/apple.png")" alt="Apple">
        <div class="card-body">
            <h5 class="card-title">Apple</h5>
            <p>Calories: 50</p>
            <a href="@Url.Action("ReadMore", "Home")" class="btn btn-primary">Read More</a>
        </div>
    </div>

    <!-- Card 2: Burger -->
    <div class="card" style="width: 18rem; display: inline-block; margin: 10px;">
        <img class="card-img-top" src="@Url.Content("~/images/burger.jpg")" alt="Burger">
        <div class="card-body">
            <h5 class="card-title">Burger</h5>
            <p>Calories: 300</p>
            <a href="@Url.Action("ReadMore", "Home")" class="btn btn-primary">Read More</a>
        </div>
    </div>

    <!-- Card 3: Cake -->
    <div class="card" style="width: 18rem; display: inline-block; margin: 10px;">
        <img class="card-img-top" src="@Url.Content("~/images/cake.jpg")" alt="Cake">
        <div class="card-body">
            <h5 class="card-title">Cake</h5>
            <p>Calories: 300</p>
            <a href="@Url.Action("ReadMore", "Home")" class="btn btn-primary">Read More</a>
        </div>
    </div>
</div>

