<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webapplikasjon</title>
    <!-- Include Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Bootstrap Icons for UI elements -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS file for additional styles -->
    <link rel="stylesheet" href="~/css/_Layout.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!--Logo-->
                <a class="navbar-brand" href="/">
                    <!-- The logo image was designed with assistance from AI -->
                    <img src="~/images/logo.png" alt="Logo" class="logo" style="height: 100px;" title="Logo" />
                </a>

                <!-- Toggler button for small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible navigation menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Centered navigation links -->
                    <ul class="navbar-nav mx-auto">
                        <!-- Link to all products -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product"
                                asp-action="Index" title="All Products">All
                                Products</a>
                        </li>

                        <!-- Links visible only when the user is authenticated -->
                        <li class="nav-item">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <!-- Link to create a new product -->
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product"
                                    asp-action="Create" title="New Product">New
                                    Product</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <!-- Link to view the user's products -->
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Table" title="My Products">My
                                    Products</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <!-- Link to view the user's producers -->
                                <a class="nav-link text-dark" asp-controller="Producer" asp-action="Table" title="My Producers">My Producers</a>
                            }
                        </li>
                    </ul>

                    <!-- Login/Logout partial view -->
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <!-- Main content container -->
    <div class="container">
        <!-- Partial view for displaying messages -->
        <partial name="_MessageDialog" />
        <main role="main" class="pb-3">
            @RenderBody()
            <!-- Optional scripts section -->
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <!--Footer Coming Soon-->
        <p>&copy; 2024 Food-Registration Company. All rights reserved.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
